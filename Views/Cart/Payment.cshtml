@model aisalesbot.Models.PaymentDetails
@{
     ViewData["Title"] = "Payment Details";
}


<div class="card" >
 <div class="card-header">
    Complete Payment Details
  </div>
    <div class="card-body">
      <form action="/Cart/PaymentSubmition" method="POST">
       <input type="hidden" name="ShipmentDetails.DeliveryAddress" value="@Model.ShipmentDetails.DeliveryAddress">
       <input type="hidden" name="ShipmentDetails.DeliveryEmail" value="@Model.ShipmentDetails.DeliveryEmail">
       <input type="hidden" name="ShipmentDetails.DeliveryMobile" value="@Model.ShipmentDetails.DeliveryMobile">
        <div class="form-group row">
            <label for="totalAmount" class="col-sm-2 col-form-label">Total Amount</label>
            <div class="col-sm-6">
            <input type="text" name="CheckOutDetails.TotalAmount" readonly class="form-control-plaintext" id="TotalAmount" value="@Model.CheckOutDetails.TotalAmount">
            </div>
        </div>
        <div class="form-group row">
            <label for="CardNumber" class="col-sm-2 col-form-label">Card Number</label>
            <div class="col-sm-6">
            <input type="text" class="form-control" id="CardNumber" placeholder="Card Number">
            </div>
        </div>
        <div class="form-group row">
            <label for="CVV" class="col-sm-2 col-form-label">CVV</label>
            <div class="col-sm-2">
            <input type="text" class="form-control" id="CVV" placeholder="CVV">
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Pay</button>
        </form>
    </div>
</div>
